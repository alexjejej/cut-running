<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="10">



    <!-- Título con 2 de peso -->
    <TextView
        android:id="@+id/txtNombreUsuarioEstadisticas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Estadísticas de Alejandro"
        style="@style/txtTituloGrande"/>


    <!-- View con linea divisora -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:background="@drawable/gradient_line" />


    <!-- View con 1.8 de peso -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"/>

    <!-- LinearLayout horizontal para text views con 4 de peso -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Text view para pasos totales -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pasos totales"
            style="@style/txtSubtitulo"
            />

        <!-- Text view para distancia -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Distancia"
            style="@style/txtSubtitulo"/>

        <!-- Text view para calorías -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Calorías"
            style="@style/txtSubtitulo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Text view para pasos totales -->
        <TextView
            android:id="@+id/txtPasosTotalesEstadisticas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="256"
            android:layout_gravity="bottom"
            style="@style/txtTituloGrande"/>

        <!-- Text view para distancia -->
        <TextView
            android:id="@+id/txtDistanciaEstadisticas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="45000"
            style="@style/txtTituloGrande"/>


        <!-- Text view para calorías -->
        <TextView
            android:id="@+id/txtCaloriasEstadisticas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="56564"
            style="@style/txtTituloGrande"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:orientation="horizontal">

        <!-- Text view para pasos totales -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pasos"
            style="@style/txtEtiqueta"/>

        <!-- Text view para distancia -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Metros"
            style="@style/txtEtiqueta"/>

        <!-- Text view para calorías -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Calorías *"
            style="@style/txtEtiqueta"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/ButtonHomeEstadisticas"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/baseline_edit_note_24"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:text="Volver al inicio"
            android:layout_gravity="center"/>

    </LinearLayout>

    <!-- Layout información-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="* Las calorias quemadas son una aproximación."
            style="@style/txtEtiqueta"/>

        <TextView
            android:id="@+id/txtInformacionCalorias"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/info_calorias_html"
            style="@style/txtEtiqueta"/>


    </LinearLayout>

</LinearLayout>
