<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="10">

    <!-- LinearLayout vertical para mensaje bienvenida -->

    <LinearLayout
        android:id="@+id/LayoutBienvenida"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <!-- TextView "Bienvenido" en la parte superior -->
        <TextView
            android:id="@+id/bienvenidaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenidx, Alejandro Garcia"
            android:fontFamily="@font/kodemono_medium"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/cut1"
            android:layout_weight="1"/>

        <!-- ImageView debajo del TextView -->
        <ImageView
            android:id="@+id/sportImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/sport_image"
            android:scaleType="centerInside"
            android:layout_weight="3"/>

    </LinearLayout>

    <!-- LinearLayout vertical para en caso de evento -->

    <LinearLayout
        android:id="@+id/LayoutCarrera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="5"
        android:visibility="visible"
        android:orientation="vertical"
        android:background="#A6F3FF78"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Importante"
            android:fontFamily="@font/kodemono_medium"
            android:textSize="25sp"
            android:paddingBottom="8dp"
            android:drawableLeft="@drawable/icon_important_announcement"
            android:drawableRight="@drawable/icon_important_announcement"
            android:layout_gravity="center"
            android:textColor="@color/cut1"
            />

        <TextView
            android:id="@+id/txtAvisoFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="La carrera es hoy a las 22:00. Para registrarte, da click en el siguiente boton"
            android:fontFamily="@font/kodemono_medium"
            style="@style/txtSubtitulo"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:id="@+id/btnCarreras"
                android:fontFamily="@font/kodemono_medium"
                android:layout_margin="5dp"
                android:text="Ver carreras"
                android:drawableLeft="@drawable/icon_add_24"
                />
            <Button
                android:id="@+id/btnAdminEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:fontFamily="@font/kodemono_medium"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/baseline_admin_panel_settings_24"
                android:text="Evento"
                android:backgroundTint="#B7950B"/>

        </LinearLayout>

    </LinearLayout>


    <!-- LinearLayout vertical para el bot贸n Carrera y divisi贸n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2.5"
        android:weightSum="3"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comenzar a contar pasos"
            android:layout_gravity="center"
            android:fontFamily="@font/kodemono_medium"
            android:textSize="15sp"
            > </TextView>

        <!-- Bot贸n Carrera modificado -->
        <Button
            android:id="@+id/btnCarrera"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Contar pasos"
            android:textSize="12dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/kodemono_medium"
            android:drawableLeft="@drawable/icon_run_24"
            android:background="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- TextView como divisor -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3"
            android:layout_marginVertical="8dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O explora la aplicaci贸n"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:fontFamily="@font/kodemono_medium"
        >

    </TextView>
    <!-- LinearLayout vertical para los botones   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2.2"
        android:weightSum="3"
        android:gravity="center">


        <!-- Primera linea de botones horizontales -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:weightSum="3"
            android:gravity="center">

            <Button
                android:id="@+id/btnLogros"
                style="@style/EstiloBotonHome"
                android:text="Logros"
                android:drawableLeft="@drawable/icon_military_tech_24"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                />


            <Button
                android:id="@+id/btnClasificacion"
                style="@style/EstiloBotonHome"
                android:text="Ranking"
                android:drawableLeft="@drawable/baseline_format_list_numbered_24"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                />

            <Button
                android:id="@+id/btnProfile"
                style="@style/EstiloBotonHome"
                android:text="Perfil"
                android:drawableLeft="@drawable/baseline_account_box_24"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                />


        </LinearLayout>

        <!-- Segunda linea de botones horizontales -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:weightSum="3"
            android:gravity="center">


            <Button
                android:id="@+id/btnEstadisticas"
                style="@style/EstiloBotonHome"
                android:layout_weight="1.5"
                android:drawableLeft="@drawable/icon_statistics"
                android:text="Estadisticas"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                />

            <Button
                android:id="@+id/btnEventos"
                style="@style/EstiloBotonHome"
                android:text="Carreras"
                android:drawableLeft="@drawable/icon_run"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                />


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_marginVertical="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1.5"
        android:gravity="center">

        <TextView
            android:id="@+id/txtApiConnectionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No contectado"
            android:drawableLeft="@drawable/icon_desconnected"
            android:textSize="15sp"
            android:padding="8dp"
            android:fontFamily="@font/kodemono_medium"
            />

        <Button
            android:id="@+id/btnReintentarEstatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="Reintentar"
            android:fontFamily="@font/kodemono_medium"
            android:backgroundTint="#FF8D8D"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeMaxTextSize="12sp"
            app:autoSizeStepGranularity="1sp"
            />

    </LinearLayout>
    <!-- LinearLayout horizontal para los botones de administraci贸n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center">

        <!-- Bot贸n admin Logros -->
        <Button
            android:id="@+id/btnAdminLogros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Logros"
            android:backgroundTint="#B7950B"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:layout_margin="2sp"
            android:drawableLeft="@drawable/baseline_admin_panel_settings_24"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeMaxTextSize="12sp"
            app:autoSizeStepGranularity="1sp"
            />

        <!-- Bot贸n admin carreras -->
        <Button
            android:id="@+id/btnAdminCarreras"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:drawableLeft="@drawable/baseline_admin_panel_settings_24"
            android:text="Carreras"
            android:layout_margin="2sp"
            android:backgroundTint="#B7950B"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeMaxTextSize="12sp"
            app:autoSizeStepGranularity="1sp"/>

        <!-- Bot贸n admin usuarios -->
        <Button
            android:id="@+id/btnAdminUsuarios"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:drawableLeft="@drawable/baseline_admin_panel_settings_24"
            android:text="Usuarios"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeMaxTextSize="12sp"
            app:autoSizeStepGranularity="1sp"
            android:backgroundTint="#B7950B"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kodemono_regular"
        android:textSize="12sp"
        android:text="Nota: Esta aplicaci贸n s贸lo funciona si est谩s conectado a la red del CUT"
        android:textAlignment="center"
        />
</LinearLayout>
