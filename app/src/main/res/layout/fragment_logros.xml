<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cut.android.running.usecases.logros.LogrosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtLogros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Logros"
            android:textAlignment="center"
            android:textColor="@color/cut1"
            android:textSize="25dp"
            style="@style/txtTituloGrande"
            android:textStyle="bold"
            android:drawableLeft="@drawable/icon_military_tech_24"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLogrosF"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</LinearLayout>