<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="108"
    tools:context="com.cut.android.running.usecases.profile.UserInfoUpdateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="108"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="108">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="Informaci贸n disponible a editar"
                android:textSize="24sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/codigoTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9">

            <EditText
                android:id="@+id/codigoEditTextUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="9"
                android:hint="C贸digo"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edadTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9">

            <EditText
                android:id="@+id/edadEditTextUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edad"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/estaturaTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9">

            <EditText
                android:id="@+id/estaturaEditTextUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estatura (cm)"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pesoTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9">

            <EditText
                android:id="@+id/pesoEditTextUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Peso (kg)"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/SpecialityIDSpinnerUpdate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:prompt="@string/Speciality_ID_prompt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="32">

            <!-- Configuraciones Avanzadas -->
            <TextView
                android:id="@+id/tvConfigAvanzadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configuraciones Avanzadas"
                android:textSize="18sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:background="?attr/selectableItemBackground" />

            <!-- Contenedor de Configuraci贸n Avanzada (Inicialmente Oculto) -->
            <LinearLayout
                android:id="@+id/llConfigAvanzadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/distanciaPromedioPorPasoTextInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/distanciaPromedioPorPasoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Distancia promedio por paso (cm)"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtEstatusUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_update"
            android:fontFamily="@font/kodemono_medium"
            android:padding="8dp"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:text="Esperando conexi贸n..."
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:weightSum="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonVolverUpdate"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Volver"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                 />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/botonGuardarUpdate"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"
                android:enabled="false"
                 />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
