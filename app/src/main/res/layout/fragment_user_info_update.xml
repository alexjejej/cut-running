<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="108"
    tools:context="com.cut.android.running.usecases.profile.UserInfoUpdateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="108"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="108">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/kodemono_medium"
            android:text="Informaci贸n general"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/codigoTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7">

            <EditText
                android:id="@+id/codigoEditTextUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="9"
                android:hint="C贸digo"
                android:fontFamily="@font/kodemono_medium"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/SpecialityIDSpinnerUpdate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:fontFamily="@font/kodemono_medium"
            android:prompt="@string/Speciality_ID_prompt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>

        <!-- View con linea divisora -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:background="@drawable/gradient_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/kodemono_medium"
            android:text="Informaci贸n salud"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edadTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7">

            <EditText
                android:id="@+id/edadEditTextUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edad"
                android:fontFamily="@font/kodemono_medium"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/estaturaTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7">

            <EditText
                android:id="@+id/estaturaEditTextUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estatura (cm)"
                android:fontFamily="@font/kodemono_medium"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pesoTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7">

            <EditText
                android:id="@+id/pesoEditTextUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Peso (kg)"
                android:fontFamily="@font/kodemono_medium"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/distanciaPromedioPorPasoTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/distanciaPromedioPorPasoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kodemono_medium"
                android:hint="Distancia promedio por paso (cm)"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/txtEstatusUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_update"
            android:fontFamily="@font/kodemono_medium"
            android:padding="8dp"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:text="Esperando conexi贸n..."
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:weightSum="5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonVolverUpdate"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Volver"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/kodemono_medium"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                 />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/botonGuardarUpdate"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/kodemono_medium"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeMaxTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                android:enabled="false"
                 />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
