<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/clasificacionnumero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/kodemono_bold"
            android:text="1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/clasificacionname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="ALEJANDRO GARCIA ARANA"
            android:fontFamily="@font/kodemono_regular"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/clasificacionpasos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="12"
            android:fontFamily="@font/kodemono_regular"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:layout_marginEnd="16dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
