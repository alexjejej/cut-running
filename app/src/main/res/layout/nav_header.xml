<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/cut1"
    android:fitsSystemWindows="true">
<!--
    android:fitsSystemWindows hace que el layout reciba un padding que lo separe
     del estatus bar (la barra que muestra hora, bateria, conexion, etx)

 -->

    <LinearLayout
        android:id="@+id/principalContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"/>

        <Space
            android:layout_width="7dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/userData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:fontFamily="@font/kodemono_medium"
                android:text="@string/txt_welcome"/>

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/kodemono_medium"
                android:text="User Name"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>