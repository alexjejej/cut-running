<resources>

  <!-- Base application Theme -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Color primario de tu aplicación -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <!-- Colores de los botones -->
    <item name="materialButtonStyle">@style/MyMaterialButton</item>

    <!-- Tamaño de texto y color para TextInputLayout -->
    <item name="textInputStyle">@style/MyTextInputStyle</item>

    <!-- Personaliza otros componentes según necesites -->
  </style>

  <!-- Estilo para botones Material -->
  <style name="MyMaterialButton" parent="Widget.MaterialComponents.Button">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/black</item>
    <item name="iconEndPadding">5dp</item>
    <item name="android:padding">2dp</item>
    <!-- Utiliza el selector de color para el fondo -->
    <item name="backgroundTint">@color/button_background_selector</item>
    <!-- Aumentar la elevación para manejar la sombra -->
    <item name="elevation">4dp</item>
    <item name="android:stateListAnimator">@animator/button_elevation</item>

  </style>

  <!-- Estilo para botones horizontales home -->

  <style name="EstiloBotonHome">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:background">#FFFFFF</item>
    <item name="android:fontFamily">@font/kodemono_medium</item>
  </style>


  <!-- Estilo para TextInputLayout -->
  <style name="MyTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
    <item name="android:textSize">12sp</item>
    <!-- Personaliza el color de la línea inferior y el color del texto flotante (hint) cuando el campo está enfocado -->

  </style>


  <style name="AppTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@android:color/white</item>
  </style>

  <!-- Splash Screen Theme -->
  <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_background</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>

  <!-- Personalización alert dialog -->
  <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">#FFCC00</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
    <item name="android:background">#FF7676</item>
  </style>

  <!-- En styles.xml -->
  <style name="DialogAnimation">
    <item name="android:windowEnterAnimation">@anim/slide_in</item>
    <item name="android:windowExitAnimation">@anim/slide_out</item>
  </style>

  <!-- Subtitulo txt -->
  <style name="txtSubtitulo">
    <item name="android:gravity">center</item>
    <item name="android:fontFamily">@font/kodemono_bold</item>
    <item name="android:textSize">18sp</item>
  </style>

  <!-- etiqueta txt -->
  <style name="txtEtiqueta">
    <item name="android:gravity">center</item>
    <item name="android:fontFamily">@font/kodemono_regular</item>
    <item name="android:textSize">12sp</item>
  </style>

  <!-- Titulo grande txt -->
  <style name="txtTituloGrande">
    <item name="android:gravity">center</item>
    <item name="android:fontFamily">@font/kodemono_regular</item>
    <item name="android:textSize">28sp</item>
  </style>

</resources>
